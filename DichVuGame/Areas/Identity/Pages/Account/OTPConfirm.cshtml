@page
@model DichVuGame.Areas.Identity.Pages.Account.OTPConfirmModel
@{
}
@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Slide Login Form template Responsive, Login form web template, Flat Pricing tables, Flat Drop downs Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    <!-- Custom Theme files -->
    <link href="\login_lt\css\style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="\login_lt\css\font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

</head>
<body>

    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1 style="font-family:Bahnschrift">XÁC THỰC</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span class="fa fa-gamepad"></span>
                </div>
                <div class="header-left-bottom">
                    <div style="text-align:center;color:red;font-size:15px">
                        @Html.ValidationMessage("InvalidOTP")
                    </div>
                    <form id="account" method="post">
                        <div class="icon1">
                            @*<span asp-validation-for="Input.Email" class="fa fa-user" ></span>*@
                            <div class="fa fa-user" style="margin-right:5px"></div>
                            <input asp-for="Input.OTP" type="text" placeholder="Mã OTP" required="" />
                        </div>
                        <div class="bottom">
                            <button class="btn">Xác thực</button>
                        </div>
                        @if (Model.Input.IsEmailConfirmed)
                        {
                            <div class="links">
                                <p><a asp-area="Identity" asp-controller="AccountConfirm" asp-action="ResendOTP" asp-route-returnUrl="@Model.ReturnUrl" style="font-size:13px;font-family:Bahnschrift"> Gửi lại mã</a></p>
                                <div class="clear"></div>
                                <div class="text-info">@Html.ValidationMessage("ExpireOTP")</div>
                            </div>
                        }
                    </form>
                </div>
                @*<div class="social">
                        <ul>
                            <li>or login using : </li>
                            <li><a asp-page="./" asp-route-returnUrl="@Model.ReturnUrl"><span class="fa fa-chevron-left" aria-hidden="true"></span></a></li>
                            <li><a href="#" class="twitter"><span class="fa fa-twitter"></span></a></li>
                            <li><a href="#" class="google"><span class="fa fa-google-plus"></span></a></li>
                        </ul>
                    </div>*@
            </div>


        </div>
    </div>
    <!-- //main -->

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}