@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Slide Login Form template Responsive, Login form web template, Flat Pricing tables, Flat Drop downs Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>

    <!-- Custom Theme files -->
    <link href="\login_lt\css\style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="\login_lt\css\font-awesome.min.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <!-- //web font -->

</head>
<body>

    <!-- main -->
    <div class="w3layouts-main">
        <div class="bg-layer">
            <h1 style="font-family:Bahnschrift">ĐĂNG NHẬP</h1>
            <div class="header-main">
                <div class="main-icon">
                    <span class="fa fa-gamepad"></span>
                </div>
                <div class="header-left-bottom">
                    <div style="color:red;text-align:center">
                        @Html.ValidationMessage("ConfirmEmail")
                    </div>
                    <form id="account" method="post">
                        <div class="icon1">
                            @*<span asp-validation-for="Input.Email" class="fa fa-user" ></span>*@
                            <div class="fa fa-user" style="margin-right:5px"></div>
                            <input asp-for="Input.Email" type="email" placeholder="Tài khoản Email" required="" />
                        </div>
                        <div class="icon1">
                            @*<span asp-validation-for="Input.Password" class="fa fa-lock"></span>
                                <hr />*@
                            <div class="fa fa-lock" style="margin-right:5px"></div>
                            <input asp-for="Input.Password" type="password" placeholder="Mật khẩu" required="" />
                        </div>
                        <div class="login-check">
                            <label asp-for="Input.RememberMe" class="checkbox"><input asp-for="Input.RememberMe" type="checkbox" name="checkbox" checked="">@Html.DisplayNameFor(m => m.Input.RememberMe) <i> </i></label>
                        </div>
                        <div class="bottom">
                            <button class="btn">Log In</button>
                        </div>
                        <div class="links">
                            <p><a asp-page="./ForgotPassword" style="font-size:13px;font-family:Bahnschrift"> Quên mật khẩu?</a></p>
                            <p class="right"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="font-size:13px;font-family:Bahnschrift">Đăng kí</a></p>
                            <div class="clear"></div>
                        </div>
                    </form>
                </div>
                @*<div class="social">
                        <ul>
                            <li>or login using : </li>
                            <li><a asp-page="./" asp-route-returnUrl="@Model.ReturnUrl"><span class="fa fa-chevron-left" aria-hidden="true"></span></a></li>
                            <li><a href="#" class="twitter"><span class="fa fa-twitter"></span></a></li>
                            <li><a href="#" class="google"><span class="fa fa-google-plus"></span></a></li>
                        </ul>
                    </div>*@
            </div>


        </div>
    </div>
    <!-- //main -->

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
