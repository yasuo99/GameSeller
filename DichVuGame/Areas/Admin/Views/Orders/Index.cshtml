@model IEnumerable<DichVuGame.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <div class="btn-group">
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-controller="Orders" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                    <a type="button" class="btn btn-info" asp-action="Details" asp-controller="Orders" asp-route-id="@item.ID"><i class="far fa-list-alt"></i></a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Orders" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
