@model DichVuGame.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}

<br />
<h2 class="text-info">Vô hiệu hóa tài khoản</h2>

<form method="post">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="User"></label>
            </div>
            <div class="col-5">
                <input asp-for="User" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Fullname"></label>
            </div>
            <div class="col-5">
                <input asp-for="Fullname" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" readonly class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
            <a asp-controller="ApplicationUser" asp-action="Index" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}