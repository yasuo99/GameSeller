@model DichVuGame.Models.Studio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}
<br />
<div class="p-4 border rounded" style="background-color:#435d7d">
    <h2 class="text-white" style="font-family:Bahnschrift;color:azure">Chỉnh sửa nhà phát hành </h2>
</div>
<br />
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ID" />
        <input asp-for="StudioLogo" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Studioname" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Studioname" class="form-control" />
            </div>
            <span asp-validation-for="Studioname" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="StudioLogo" class="control-label"></label>
            </div>
            <div class="col-5">
                <input name="files" type="file" />
            </div>
            <img src="@Model.StudioLogo" style="margin-left:10px"width="200" height="200" />
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Describe" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Describe" class="form-control" />
            </div>
            <span asp-validation-for="Describe" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CountryID" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CountryID" class="form-control" asp-items="ViewBag.CountryID"></select>
            </div>
            <span asp-validation-for="CountryID" class="text-danger"></span>
        </div>
        <br />
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Lưu" />
            <a asp-action="Index" class="btn btn-success">Trở về</a>
        </div>
    </div>
</form>