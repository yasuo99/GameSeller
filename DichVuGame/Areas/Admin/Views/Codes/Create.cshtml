@model DichVuGame.Models.ViewModels.GamesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}

<br />
<div class="p-4 border rounded" style="background-color:#435d7d">
    <h2 class="text-white" style="font-family:Bahnschrift;color:azure">Thêm mã cho game </h2>
</div>
<br />
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input hidden asp-for="@Model.Game.ID" />
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-2">
            <label asp-for="@Model.Code.Gamecode" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="@Model.Code.Gamecode" class="form-control" />
        </div>
        <span asp-validation-for="@Model.Code.Gamecode" class="text-danger"></span>
        <br />

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Thêm mã game" />
            <a asp-controller="Games" asp-action="Index" class="btn btn-success">Trở về </a>
        </div>
    </div>
</form>
