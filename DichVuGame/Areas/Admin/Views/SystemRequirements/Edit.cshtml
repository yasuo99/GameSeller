@model DichVuGame.Models.SystemRequirement

    @{
        ViewData["Title"] = "Edit";
        Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
    }

    <br />
    <div class="p-4 border rounded" style="background-color:#435d7d">
        <h2 class="text-white" style="font-family:Bahnschrift;color:azure">Chỉnh sửa yêu cầu cấu hình cho  game</h2>
    </div>
    <br />
    <form  asp-action="Edit">
        <div class="p-4 border rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SystemRequirementID" />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="OS" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="OS" class="form-control" />
                </div>
                <span asp-validation-for="OS" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Processor" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Processor" class="form-control" />
                </div>
                <span asp-validation-for="Processor" class="text-danger"></span>
            </div>
            <br />
            
            
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Ram" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Ram" class="form-control" />
                </div>
                <span asp-validation-for="Ram" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Graphic" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Graphic" class="form-control" />
                </div>
                <span asp-validation-for="Graphic" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="DirectX" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="DirectX" class="form-control" />
                </div>
                <span asp-validation-for="DirectX" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Storage" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Storage" class="form-control" />
                </div>
                <span asp-validation-for="Storage" class="text-danger"></span>
            </div>
            
            <br />
            <div class="col-5">
                <input style="margin-left:185px" class="form-check-input" asp-for="Network" />@Html.DisplayNameFor(model => model.Network)
            </div>
            <div class="col-2">
                <label class="form-check-label"></label>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Trở về </a>
            </div>
        </div>
    </form>
