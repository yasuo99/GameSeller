@model DichVuGame.Models.Discount

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/AdminHome/_CMSLayout.cshtml";
}

<br />
<div class="p-4 border rounded" style="background-color:#435d7d">
    <h2 class="text-white" style="font-family:Bahnschrift;color:azure">Chỉnh sữa mã giảm giá </h2>
</div>
<br />

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Code" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Code" class="form-control" />
            </div>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DiscountValue" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="DiscountValue" class="form-control" />
            </div>
            <span asp-validation-for="DiscountValue" class="text-danger"></span>
        </div>
        <br />
       
        <br />

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Trở về </a>
        </div>
    </div>
</form>
